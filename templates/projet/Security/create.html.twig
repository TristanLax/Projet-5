{# templates/projet/Security/create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %} S'inscrire {% endblock %}


{% block body %}

<div class="row">
    <div class="col-lg-12 text-center">

        <h3 class="login-main">Inscription sur le site</h3>

        {{ form_start(form) }}
            <div class="col-lg-4 col-md-6 col-sm-8 offset-lg-4 offset-md-3 offset-sm-2">{{ form_row(form.username) }}</div>
            <div class="col-lg-4 col-md-6 col-sm-8 offset-lg-4 offset-md-3 offset-sm-2">{{ form_row(form.password) }}</div>
            <div class="col-lg-4 col-md-6 col-sm-8 offset-lg-4 offset-md-3 offset-sm-2">{{ form_row(form.email) }}</div>
        {{ form_widget(form) }}
            <button class="btn btn-secondary">S'inscrire</button>
        {{ form_end(form) }}

    </div>
</div>

{% endblock %}