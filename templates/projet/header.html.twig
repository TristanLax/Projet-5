{# templates/projet/header.html.twig #}

{% block header %}
<header>

    <div class="row">
        <div id="menu" class="col-lg-12">
            <h1 class="text-center" id="header-text">La boite à Rabiot</h1>
            <nav class="navbar navbar-expand-lg navbar-light d-flex justify-content-center">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarText">

                    <div class="navbar-nav mr-auto">
                        <a class=" nav-item nav-link" href="{{ path('home.index') }}">Index</a>
                        <a class="nav-item nav-link" href="{{ path('liste.index') }}">Liste des membres</a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="nav-item nav-link" href="{{ path('admin.index') }}">Admin</a>
                        {% endif %}
                        {% if app.user %}
                                <a class="nav-item nav-link" href="{{ path('profil.index') }}">Profil</a>
                        {% endif %}
                    </div>
                    {% if app.user %}
                        <div class="navbar-nav">
                            <a class="nav-item nav-link" href="{{ path('logout') }}">Se déconnecter</a>
                        </div>
                    {% else %}

                        <div class="navbar-nav">
                            <a class="nav-item nav-link" href="{{ path('login') }}">Se connecter</a>
                        </div>

                    {% endif %}

                </div>
            </nav>
        </div>
    </div>

</header>
{% endblock %}